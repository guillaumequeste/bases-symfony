{% extends 'base.html.twig' %}

{% block body %}

    <h1>All Pins</h1>

    {{ random(['apple', 'orange', 'citrus']) }}
    {% set pins_count = pins|length %}
    <p>{{ pins_count }} pins</p>
    {{'action :' | upper}}

    <a href="{{ path('app_pins_create') }}">Create Pin</a>

    {% for pin in pins %}
        <article>
            <h1><a href="{{ path('app_pins_show', {'id': pin.id}) }}">{{ pin.title }}</a></h1>
            <p>{{ pin.description }}</p>
        </article>
    {% else %}
        <p>Sorry, no pins yet</p>
    {% endfor %}

    <img src="{{ asset('/img/lune.jpeg') }}" alt="lune">

{% endblock %}
